{
  "build": { "dockerfile": "Dockerfile" },
  "runArgs": [
    // Configuration for GDB.
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    // For realtime priority.
    "--cap-add=SYS_NICE"
  ],
  "mounts": [
    {
      "type": "volume",
      "source": "music-science-37-cache",
      "target": "/cache_volume/"
    }
  ],
  "containerEnv": {
    "CCACHE_COMPILERCHECK": "content",
    "CCACHE_DIR": "/cache_volume/ccache/",
    "VCPKG_DEFAULT_BINARY_CACHE": "/cache_volume/vcpkg/",
    "POETRY_CACHE_DIR": "/cache_volume/poetry/"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-vscode.cmake-tools",
        "cheshirekow.cmake-format",
        "streetsidesoftware.code-spell-checker",
        "cschlosser.doxdocgen",
        "davidanson.vscode-markdownlint",
        "jebbs.plantuml",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "njpwerner.autodocstring",
        "lextudio.restructuredtext",
        "trond-snekvik.simple-rst",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "james-yu.latex-workshop",
        "redhat.vscode-yaml",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.flake8",
        "ms-python.mypy-type-checker",
        "ms-python.pylint",
        "executablebookproject.myst-highlight"
      ],
      "settings": {
        "cmakeFormat.exePath": "/workspaces/numerical-collection-cpp/.venv/bin/cmake-format",
        "plantuml.jar": "/usr/local/plantuml/plantuml.jar"
      }
    }
  },
  "postCreateCommand": "bash ./.devcontainer/setup.bash",
  "remoteUser": "ubuntu"
}
